    "        s = 0",
    "        for i in range(len(b)):",
    "            if mask & (1 << i):",
    "                s += b[i]",
    "        sums_b.setdefault(s, []).append(mask)",
    "    # check combinations",
    "    for sa in sums_a:",
    "        if target - sa in sums_b:",
    "            return True",
    "    return False"
