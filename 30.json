    "    for i in range(n):",
    "        index = arr[i] // exp",
    "        count[index % 10] += 1",
    "",
    "    for i in range(1, 10):",
    "        count[i] += count[i - 1]",
    "",
    "    for i in range(n - 1, -1, -1):",
    "        index = arr[i] // exp",
    "        output[count[index % 10] - 1] = arr[i]",
    "        count[index % 10] -= 1",
    "",
    "    for i in range(n):",
    "        arr[i] = output[i]",
    "",
    "def radix_sort(arr):",
    "    max_val = max(arr)",
    "    exp = 1",
    "    while max_val // exp > 0:",
    "        counting_sort_for_radix(arr, exp)",
    "        exp *= 10"
